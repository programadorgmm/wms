{% extends '::base.html.twig' %}

{% block headline %}
    {% trans %}Update Position{% endtrans %}
{% endblock headline %}

{% block content %}
    <form action="{{ path('stock_position_update', {'id': stockPosition.id}) }}" method="post" {{ form_enctype(form) }}
          class="form-horizontal">
        {{ form_widget(form) }}
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button type="submit" class="btn btn-primary">{% trans %}Submit{% endtrans %}</button>
                {% if is_expr_granted("hasAnyRole('ROLE_ADMIN','ROLE_STOCK_POSITION_DELETE')") %}
                    <a href="{{ path('stock_position_delete', {'id': stockPosition.id}) }}"
                       onclick="javascript:return confirm('{% trans %}Are you sure?{% endtrans %}');"
                       class="btn btn-danger pull-right"><i class="glyphicon glyphicon-trash"></i> {% trans %}
                        Delete{% endtrans %}</a>
                {% endif %}
            </div>
        </div>
    </form>
{% endblock content %}