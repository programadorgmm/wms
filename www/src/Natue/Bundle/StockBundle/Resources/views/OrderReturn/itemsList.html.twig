{% extends '::base.html.twig' %}

{% block headline %}
    Order return<br/>Items list
{% endblock headline %}

{% block content %}

    {{ pedroteixeira_grid(grid, {'orderId': orderId}) }}

    <form action="{{ path('stock_order_return_confirm') }}" method="post" class="form-horizontal">

        <input id="natue_stockbundle_hidden_parameters" name="natue_stockbundle_hidden_parameters[order_id]"
               type="hidden"
               required="required"
               value="{{ orderId }}" >

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button type="submit" class="btn btn-primary">{% trans %}Confirm order return{% endtrans %}</button>
            </div>
        </div>
    </form>

{% endblock content %}
