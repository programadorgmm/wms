{% extends '::base.html.twig' %}

{% block headline %}
    {% if is_expr_granted("hasAnyRole('ROLE_ADMIN','ROLE_STOCK_PURCHASE_ORDER_ITEM_READ')") %}
        <a href="{{ path('stock_purchase_order_item_list', {'id': purchaseOrderId}) }}" class="btn btn-default pull-right">{% trans %}Purchase Order{% endtrans %}</a>
    {% endif %}

    {% trans %}Update Received Purchase Order Item Cost{% endtrans %}
{% endblock headline %}

{% block content %}
    <form action="{{ path('stock_purchase_order_cost_average_update', {'purchaseOrderId': purchaseOrderId, 'cost': cost, 'sku': sku}) }}" method="post" {{ form_enctype(form) }}
          class="form-horizontal">
        {{ form_widget(form) }}

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button type="submit" class="btn btn-primary">{% trans %}Update all Cost Average entries{% endtrans %}</button>
            </div>
        </div>
    </form>
{% endblock content %}

