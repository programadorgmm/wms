{% extends '::base.html.twig' %}

{% block headline %}
    {% trans %}Set inventory items{% endtrans %}
{% endblock headline %}

{% block content %}

    <form action="{{ path('stock_inventory_set_items_post', {'inventoryId': inventoryId}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
        {{ form_widget(form) }}

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button id="qa-addItems" type="submit" class="btn btn-primary">{% trans %}Add items{% endtrans %}</button>
            </div>
        </div>
    </form>

    {{ pedroteixeira_grid(grid) }}

    <a href="{{ path('stock_inventory_init_control_inventory', {'inventoryId': inventoryId}) }}" class="btn btn-primary">
        {% trans %}Do control inventory{% endtrans %}
    </a>

{% endblock content %}
