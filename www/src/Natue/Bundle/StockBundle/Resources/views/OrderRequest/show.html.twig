{% extends '::base.html.twig' %}

{% block headline %}
    {% trans %}Order Request{% endtrans %}
{% endblock headline %}

{% block content %}
    <table class="table">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Description {% endtrans %}</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>
    <table class="table">
        <tr class="active">
            <th colspan="4">{% trans %}Items{% endtrans %}</th>
        </tr>
        <tr>
            <th>{% trans %}Quantity{% endtrans %}</th>
            <th>{% trans %}Requested Invoice Cost{% endtrans %}</th>
            <th>{% trans %}Sku{% endtrans %}</th>
            <th>{% trans %}Name{% endtrans %}</th>
        </tr>
        {% for item in entity.getItems() %}
            <tr>
                <td>{{ item.quantity }}</td>
                <td>{{ item.requestedInvoiceCost }}</td>
                <td>{{ item.zedProduct.sku }}</td>
                <td>{{ item.zedProduct.name }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
