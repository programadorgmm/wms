{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
<div class="div-login">
    {% if error %}
        <div class="alert alert-danger">{{ error|trans }}</div>
    {% endif %}
    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

        <div class="form-group ">
            <label for="username" class="col-sm-3 control-label">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
            <div class="col-sm-9">
                <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" required="true"/>
            </div>
        </div>

        <div class="form-group ">
            <label for="password" class="col-sm-3 control-label">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
            <div class="col-sm-9">
                <input type="password" id="password" name="_password" class="form-control" required="true"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button type="submit" class="btn btn-primary">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
            </div>
        </div>
    </form>
</div>
{% endblock fos_user_content %}